// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String @id @default(uuid())
  name              String
  username          String
  email             String
  password          String?
  online            Boolean @default(false)
  avatar_url        String?
  google_id         String?
  linkedin_id       String?
  facebook_id       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  channels          Channel[]
  channel_connected ChannelConnect[]
  messages          Message[]
  channel_user_permissions  ChannelUserPermission[]

  @@map("users")
}

model Channel {
  id          String @id @default(uuid())
  name        String
  slug        String @unique
  access      Boolean @default(true)
  description String?
  password    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User @relation(fields: [user_id], references: [id])

  user_id   String
  channel_connected ChannelConnect[]
  messages Message[]
  permissions ChannelPermission[]
  @@map("channels")
}

model ChannelConnect {
  id            String @id @default(uuid())
  level         Level @default(user)
  createdAt     DateTime @default(now())

  user          User @relation(fields: [user_id], references: [id])
  user_id       String

  channel       Channel @relation(fields: [channel_id], references: [id])
  channel_id    String

  @@map("channel_connected")
}

model Message {
  id          Int @id @default(autoincrement())
  messages    String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  channel     Channel @relation(fields: [channel_id], references: [id])
  channel_id  String

  user        User @relation(fields: [user_id], references: [id])
  user_id     String
  @@map("messages")
}

model ChannelPermission {
  id            Int @id @default(autoincrement())
  permissions   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  channel       Channel @relation(fields: [channel_id], references: [id])
  channel_id    String

  channel_user_permissions ChannelUserPermission[]
  @@map("channel_permissions")
}

model ChannelUserPermission {
  id                    Int @id @default(autoincrement())
  permissions           String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  channel_permission    ChannelPermission @relation(fields: [channel_permission_id], references: [id])
  channel_permission_id Int

  user                  User @relation(fields: [user_id], references: [id])
  user_id               String
  @@map("user_permissions")
}

enum Level {
    user
    voice
    op
}
