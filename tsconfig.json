{
  "compilerOptions": {
    "target": "es2017",                                     
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "allowJs": true,                               
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                         
  },
  "include": [
    "src/**/*.ts"
  ]
}